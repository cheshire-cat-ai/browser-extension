{
    "manifest_version": 3,
    "name": "Cheshire Cat AI",
    "version": "0.0.1",
    "description": "Communicate with the Cheshire Cat AI from within your favorite browser!",
    "author": "zAlweNy26 & Cheshire Cat Contributors",
    "homepage_url": "https://github.com/cheshire-cat-ai/browser-extension",
    "icons": {
        "128": "icon.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "action": {
        "default_icon": {
            "128": "icon.png"
        },
        "default_popup": "index.html",
        "default_title": "Cheshire Cat Chat"
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    }
}